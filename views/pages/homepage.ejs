<h1 class="display-4">Welcome To Class Notes!</h1>
<a href="/articles/list" class="btn btn-light">View All Notes</a>
<a href="/articles/add" class="btn btn-light">Add Notes</a>

<div style="height:50px; text-align: center">
    <h2>Filter by subject</h2>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Subject</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% sub.forEach(function(subject){ %>
            <tr>
                <td></td>
                <td><%= subject.subject %></td>
                <td>
                    <form class="d-inline" action="/articles/filter/<%= subject.id %>" method="post">
                        <input type="submit" value="View Notes" class="btn btn-light">
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>